<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Challenge 5</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="d-flex flex-row">
        <%- include('partials/header') %>
        <div class="content w-100">
            <%- include('partials/navbar') %>
            <div class="main">
                <div class="pt-4 mx-4">
                    <div aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item text-page"><a href="/" class="text-decoration-none text-body">Cars</a></li>
                            <li class="breadcrumb-item text-page"><a href="/cars" class="text-decoration-none text-body">List Cars</a></li>
                            <li class="breadcrumb-item active text-page" aria-current="step">Update Car Information</li>
                        </ol>
                    </div>
                    <div class="d-flex flex-row justify-content-between mt-4 mb-3">
                        <h3>Update Car Information</h3>
                    </div>
                </div>
                <div class="mx-4">
                    <form method="post" action="/cars/edit/<%= cars.id %>">
                        <table class="table table-borderless bg-white">
                            <tr>
                                <td><label for="carName" class="font-input mt-2">Nama</label></td>
                                <td><input type="text" name="carName" class="box-input mt-2" value="<%= cars.carName %>"></td>
                            </tr>
                            <tr>
                                <td><label for="rentPerDay" class="font-input">Sewa Per Hari</label></td>
                                <td><input type="text" name="rentPerDay" class="box-input" value="<%= cars.rentPerDay %>"></td>
                            </tr>
                            <tr>
                                <td><label for="carSize" class="font-input">Ukuran</label></td>
                                <td><select name="carSize" id="carSize" class="box-input">
                                    <option value="small" <%= cars.carSize === 'small' ? 'selected' : '' %>>Small</option>
                                    <option value="medium" <%= cars.carSize === 'medium' ? 'selected' : '' %>>Medium</option>
                                    <option value="large" <%= cars.carSize === 'large' ? 'selected' : '' %>>Large</option>
                                </select></td>
                            </tr>
                            <tr>
                                <td><label for="carImg" class="font-input">Foto</label></td>
                                <td><input type="text" name="carImg" class="box-input mb-5" disabled></td>
                            </tr>
                        </table>
                        <div class="button" style="margin-top: 148px;">
                            <button type="reset" class="btn-cancel me-3">Cancel</button>
                            <button type="submit" class="btn-save">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>